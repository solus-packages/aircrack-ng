From 5c956744b8da21df7ccf66daaa72e0528f6bca84 Mon Sep 17 00:00:00 2001
From: Ikey Doherty <ikey@solus-project.com>
Date: Sun, 30 Apr 2017 01:17:16 +0100
Subject: [PATCH] Use proper paths for packaging

Signed-off-by: Ikey Doherty <ikey@solus-project.com>
---
 common.mak                                            | 2 +-
 scripts/airoscript-ng/Makefile                        | 4 ++--
 scripts/airoscript-ng/src/locale/es_ES.UTF-8/Makefile | 2 +-
 src/Makefile                                          | 2 +-
 4 files changed, 5 insertions(+), 5 deletions(-)

diff --git a/common.mak b/common.mak
index e8cfddf..2f714f4 100644
--- a/common.mak
+++ b/common.mak
@@ -207,7 +207,7 @@ CXXFLAGS	= $(CFLAGS) $(ASMFLAG) -fdata-sections -ffunction-sections
 
 CFLAGS          += $(OPTFLAGS) $(REVFLAGS) $(COMMON_CFLAGS)
 
-prefix          = /usr/local
+prefix          = /usr
 bindir          = $(prefix)/bin
 sbindir         = $(prefix)/sbin
 mandir          = $(prefix)/share/man/man1
diff --git a/scripts/airoscript-ng/Makefile b/scripts/airoscript-ng/Makefile
index 29de0b5..8130513 100644
--- a/scripts/airoscript-ng/Makefile
+++ b/scripts/airoscript-ng/Makefile
@@ -1,7 +1,7 @@
 #!/usr/bin/make
 # Configure prefix here:
-prefix=$(DESTDIR)/usr/local/
-etcdir=$(DESTDIR)/usr/local/etc/
+prefix=$(DESTDIR)/usr/
+etcdir=$(DESTDIR)/etc/
 name="airoscript-ng"
 
 INSTALL = install -c
diff --git a/scripts/airoscript-ng/src/locale/es_ES.UTF-8/Makefile b/scripts/airoscript-ng/src/locale/es_ES.UTF-8/Makefile
index d344148..7f2d15c 100644
--- a/scripts/airoscript-ng/src/locale/es_ES.UTF-8/Makefile
+++ b/scripts/airoscript-ng/src/locale/es_ES.UTF-8/Makefile
@@ -1,5 +1,5 @@
 all: install
-localedir=/usr/local/share/locale/es_ES.UTF-8/LC_MESSAGES
+localedir=/usr/share/locale/es_ES.UTF-8/LC_MESSAGES
 # FIXME
 
 build:
diff --git a/src/Makefile b/src/Makefile
index fbb15f8..079c448 100644
--- a/src/Makefile
+++ b/src/Makefile
@@ -132,7 +132,7 @@ endif
 
 
 ifeq ($(subst TRUE,true,$(filter TRUE true,$(sqlite) $(SQLITE))),true)
-	LIBSQL		= -L/usr/local/lib -lsqlite3
+	LIBSQL		= -L/usr/lib -lsqlite3
 else
 	LIBSQL		=
 endif
